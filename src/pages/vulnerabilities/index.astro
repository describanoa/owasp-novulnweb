---
/**
 * Página índice de vulnerabilidades OWASP Top 10
 * Muestra la lista completa con enlaces a cada detalle
 */
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

export const prerender = false;

// Verificar autenticación del lado del servidor
const token = Astro.cookies.get('token')?.value;

if (!token) {
  return Astro.redirect('/login?redirect=/vulnerabilities');
}

// Validar token con el backend
const API_URL = 'http://localhost:3001';
try {
  const authResponse = await fetch(`${API_URL}/api/profile`, {
    headers: {
      'Authorization': `Bearer ${token}`,
    },
  });

  if (!authResponse.ok) {
    return Astro.redirect('/login?redirect=/vulnerabilities');
  }
} catch (error) {
  return Astro.redirect('/login?redirect=/vulnerabilities');
}

// Fetch de las vulnerabilidades desde nuestra API
const response = await fetch(`${API_URL}/api/vulnerabilities`);
const { success, data: vulnerabilities } = await response.json();

if (!success || !vulnerabilities) {
  return Astro.redirect('/');
}
---

<Layout title="OWASP Top 10 2021 - Vulnerabilidades">
  <div class="min-h-screen">
    <div class="border-b border-white/10 bg-white/5 backdrop-blur-md sticky top-20 z-40">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center gap-2 text-sm">
          <a href="/" class="text-gray-400 hover:text-white transition-colors">Inicio</a>
          <span class="text-gray-600">/</span>
          <span class="text-white font-medium">Vulnerabilidades</span>
        </nav>
      </div>
    </div>

    <!-- Header -->
    <div class="relative py-16 overflow-hidden">
      <div class="container mx-auto px-4 relative z-10">
        <h1 class="text-5xl font-bold mb-4 text-white">OWASP Top 10 2021</h1>
        <p class="text-xl max-w-3xl text-gray-300">
          Las 10 vulnerabilidades de seguridad más críticas en aplicaciones web, 
          con ejemplos reales y cómo las hemos mitigado en esta aplicación.
        </p>
      </div>
    </div>

    <!-- Lista de vulnerabilidades -->
    <div class="container mx-auto px-4 py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-7xl mx-auto">
        {vulnerabilities.map((vuln: any) => (
          <a 
            href={`/vulnerabilities/${vuln.shortTitle}`}
            class="group bg-white/5 backdrop-blur-md rounded-xl overflow-hidden border border-white/10 hover:border-red-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-red-500/10"
          >
            <!-- Header con icono y código -->
            <div class="bg-white/5 px-6 py-4 flex items-center justify-between border-b border-white/5">
              <div class="flex items-center gap-4">
                <div class="bg-white/10 p-2 rounded-lg">
                  <Image
                    src={vuln.icon}
                    alt={vuln.title}
                    width="48"
                    height="48"
                    loading="eager"
                    class="w-8 h-8 object-contain"
                  />
                </div>
                <div>
                  <span class="text-red-400 font-bold text-lg">{vuln.code}</span>
                  <p class="text-gray-400 text-sm">Rank #{vuln.rank}</p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-red-400 font-semibold text-lg">{vuln.incidenceRate}</p>
                <p class="text-gray-500 text-xs">Incidencia</p>
              </div>
            </div>

            <!-- Contenido -->
            <div class="p-6">
              <h2 class="text-xl font-bold text-white mb-3 group-hover:text-red-400 transition-colors">
                {vuln.title}
              </h2>
              <p class="text-gray-400 line-clamp-3 mb-4 text-sm">
                {vuln.description}
              </p>
              
              <!-- Footer con arrow -->
              <div class="flex items-center justify-between pt-4 border-t border-white/5">
                <span class="text-red-400 group-hover:translate-x-2 transition-transform inline-flex items-center gap-2 text-sm font-medium">
                  Ver detalles
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Nota sobre implementación -->
      <div class="mt-16 mb-8 max-w-4xl mx-auto bg-blue-900/20 border border-blue-500/30 rounded-xl p-8 backdrop-blur-sm">
        <div class="flex items-start gap-4">
          <div>
            <h3 class="text-xl font-bold text-blue-400 mb-2">
              Implementaciones Reales
            </h3>
            <p class="text-blue-200/80">
              Cada vulnerabilidad incluye ejemplos de cómo la he mitigado en esta aplicación,
              con referencias al código real y endpoints para probar las protecciones implementadas.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
