---
/**
 * P√°gina de detalle de vulnerabilidad espec√≠fica
 * Ruta din√°mica: /vulnerabilities/[id]
 */
import Layout from '../../layouts/Layout.astro';
import Prism from 'prismjs';
import 'prismjs/themes/prism-okaidia.css';
import 'prismjs/components/prism-typescript';
import 'prismjs/components/prism-javascript';
import 'prismjs/components/prism-json';
import 'prismjs/components/prism-java';

// Server-side rendering habilitado para rutas din√°micas
export const prerender = false;

const { id } = Astro.params;

// Fetch de la vulnerabilidad espec√≠fica
const API_URL = 'http://localhost:3001';
const response = await fetch(`${API_URL}/api/vulnerabilities/${id}`);
const { success, data: vuln } = await response.json();

if (!success || !vuln) {
  return Astro.redirect('/vulnerabilities');
}

// Helper para aplicar syntax highlighting
const highlightCode = (code: string, language: string) => {
  const langMap: Record<string, string> = {
    'typescript': 'typescript',
    'javascript': 'javascript',
    'json': 'json',
    'java': 'java',
  };
  
  const prismLang = langMap[language.toLowerCase()] || 'javascript';
  const grammar = Prism.languages[prismLang];
  
  if (!grammar) {
    return code;
  }
  
  return Prism.highlight(code, grammar, prismLang);
};
---

<Layout title={`${vuln.code} - ${vuln.title}`}>
  <div class="min-h-screen bg-gray-50">
    <div class="bg-white border-b">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center gap-2 text-sm">
          <a href="/" class="text-gray-600 hover:text-gray-900">Inicio</a>
          <span class="text-gray-400">/</span>
          <a href="/vulnerabilities" class="text-gray-600 hover:text-gray-900">Vulnerabilidades</a>
          <span class="text-gray-400">/</span>
          <span class="text-gray-900 font-medium">{vuln.code}</span>
        </nav>
      </div>
    </div>

    <!-- Header -->
    <div class="bg-gradient-to-r from-gray-800 to-red-400 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="flex items-start gap-6">
          <img 
            src={vuln.icon} 
            alt={vuln.title}
            width="80"
            height="80"
            class="w-20 h-20 object-contain bg-white/10 rounded-lg p-3"
          />
          <div class="flex-1">
            <div class="flex items-center gap-4 mb-2">
              <span class="bg-white/20 px-3 py-1 rounded-full text-sm font-semibold">
                {vuln.code}
              </span>
              <span class="bg-white/20 px-3 py-1 rounded-full text-sm">
                Rank #{vuln.overview.rank}
              </span>
              <span class="bg-white/20 px-3 py-1 rounded-full text-sm">
                Incidencia: {vuln.overview.incidenceRate}
              </span>
            </div>
            <h1 class="text-4xl font-bold mb-4">{vuln.title}</h1>
            <p class="text-lg max-w-4xl">
              {vuln.overview.description}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Descripci√≥n -->
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-5xl mx-auto space-y-12">
        <section>
          <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            ¬øQu√© es {vuln.title}?
          </h2>
          <div class="bg-white rounded-xl shadow-md p-6 space-y-4">
            {vuln.description.map((desc: string) => (
              <p class="text-gray-700 leading-relaxed">{desc}</p>
            ))}
          </div>
        </section>

        <!-- Vulnerabilidades Comunes -->
        <section>
          <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            Vulnerabilidades Comunes
          </h2>
          <div class="bg-white rounded-xl shadow-md p-6">
            <ul class="space-y-3">
              {vuln.commonVulnerabilities.map((vulnerability: string) => (
                <li class="flex items-start gap-3">
                  <span class="text-red-500">X</span>
                  <span class="text-gray-700">{vulnerability}</span>
                </li>
              ))}
            </ul>
          </div>
        </section>

        <!-- C√≥mo Prevenir -->
        <section>
          <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
            C√≥mo Prevenir
          </h2>
          <div class="bg-white rounded-xl shadow-md p-6">
            <ul class="space-y-3">
              {vuln.howToPrevent.map((prevention: string) => (
                <li class="flex items-start gap-3">
                  <span class="text-green-500">‚úì</span>
                  <span class="text-gray-700">{prevention}</span>
                </li>
              ))}
            </ul>
          </div>
        </section>

        <!-- Escenarios de Ataque -->
        {vuln.attackScenarios.length > 0 && (
          <section>
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              Escenarios de Ataque
            </h2>
            <div class="space-y-6">
              {vuln.attackScenarios.map((scenario: any, index: number) => (
                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                  <div class="bg-red-50 border-l-4 border-red-500 px-6 py-4">
                    <h3 class="text-xl font-bold text-red-900">{scenario.title}</h3>
                  </div>
                  <div class="p-6 space-y-4">
                    <p class="text-gray-700">{scenario.description}</p>
                    
                    {scenario.vulnerableCode && (
                      <div class="bg-gray-900 rounded-lg overflow-hidden">
                        <div class="bg-red-600 px-4 py-2 flex items-center gap-2">
                          <div class="flex gap-1.5">
                            <div class="w-3 h-3 rounded-full bg-red-300"></div>
                            <div class="w-3 h-3 rounded-full bg-red-300"></div>
                            <div class="w-3 h-3 rounded-full bg-red-300"></div>
                          </div>
                          <span class="ml-2 text-white text-sm font-medium">C√≥digo Vulnerable</span>
                        </div>
                        <pre class="p-4 overflow-x-auto text-gray-100 text-sm"><code>{scenario.vulnerableCode}</code></pre>
                      </div>
                    )}

                    {scenario.exploitExample && (
                      <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
                        <p class="text-orange-900 font-medium mb-2">Ejemplo de Exploit:</p>
                        <pre class="text-orange-800 text-sm overflow-x-auto"><code>{scenario.exploitExample}</code></pre>
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- Implementaci√≥n en esta App -->
        {vuln.implementationInApp.hasExample && (
          <section>
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              Implementaci√≥n en esta aplicaci√≥n
            </h2>
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl shadow-md overflow-hidden border-2 border-blue-200">
              <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
                <h3 class="text-white text-xl font-bold">C√≥mo se mitig√≥ aqu√≠</h3>
              </div>
              <div class="p-6 space-y-6">
                <p class="text-gray-800 leading-relaxed text-lg">
                  {vuln.implementationInApp.description}
                </p>
                
                <div class="bg-white rounded-lg p-4 border-l-4 border-blue-500">
                  <p class="text-sm text-gray-600 mb-2">Ubicaci√≥n en el c√≥digo:</p>
                  <code class="text-blue-700 font-mono text-sm bg-blue-50 px-3 py-2 rounded block">
                    {vuln.implementationInApp.location}
                  </code>
                </div>

                {vuln.implementationInApp.testEndpoint && (
                  <div class="bg-white rounded-lg p-4 border-l-4 border-green-500">
                    <p class="text-sm text-gray-600 mb-2">Endpoint de prueba:</p>
                    <a 
                      href={API_URL + vuln.implementationInApp.testEndpoint}
                      class="text-green-700 font-mono text-sm hover:underline"
                      target="_blank"
                    >
                      {vuln.implementationInApp.testEndpoint} ‚Üí
                    </a>
                  </div>
                )}

                <!-- Ejemplos de C√≥digo -->
                {vuln.codeExamples && vuln.codeExamples.length > 0 && (
                  <div class="mt-8 space-y-6">
                    <div class="border-t-2 border-blue-300 pt-6">
                      <h4 class="text-2xl font-bold text-gray-900 mb-4 flex items-center gap-2">
                        Ejemplos de C√≥digo
                      </h4>
                    </div>
                    
                    {vuln.codeExamples.map((example: any, index: number) => (
                      <div class="bg-white rounded-xl shadow-md overflow-hidden border-2 border-gray-200">
                        <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-3">
                          <h5 class="text-white text-lg font-bold">{example.title}</h5>
                        </div>
                        <div class="p-6 space-y-6">
                          
                          <!-- C√≥digo Vulnerable -->
                          <div>
                            <div class="bg-gray-900 rounded-lg overflow-hidden">
                              <div class="bg-gradient-to-r bg-black to-red-600 px-4 py-2 flex items-center gap-2">
                                <div class="flex gap-1.5">
                                  <div class="w-3 h-3 rounded-full bg-red-400"></div>
                                  <div class="w-3 h-3 rounded-full bg-amber-400"></div>
                                  <div class="w-3 h-3 rounded-full bg-green-500"></div>
                                </div>
                                <span class="ml-2 text-white text-sm font-medium">C√≥digo vulnerable</span>
                              </div>
                              <pre class="p-4 overflow-x-auto text-sm"><code class={`language-${example.language}`} set:html={highlightCode(example.vulnerable.code, example.language)} /></pre>
                            </div>
                            <div class="mt-3 bg-red-50 border-l-4 border-red-500 p-4 rounded">
                              <p class="text-red-900 text-sm leading-relaxed">{example.vulnerable.explanation}</p>
                            </div>
                          </div>

                          <!-- C√≥digo Seguro -->
                          <div>
                            <div class="bg-gray-900 rounded-lg overflow-hidden">
                              <div class="bg-gradient-to-r bg-black to-green-600 px-4 py-2 flex items-center gap-2">
                                <div class="flex gap-1.5">
                                  <div class="w-3 h-3 rounded-full bg-red-400"></div>
                                  <div class="w-3 h-3 rounded-full bg-amber-400"></div>
                                  <div class="w-3 h-3 rounded-full bg-green-500"></div>
                                </div>
                                <span class="ml-2 text-white text-sm font-medium">Implementaci√≥n en esta app</span>
                              </div>
                              <pre class="p-4 overflow-x-auto text-sm"><code class={`language-${example.language}`} set:html={highlightCode(example.secure.code, example.language)} /></pre>
                            </div>
                            <div class="mt-3 bg-green-50 border-l-4 border-green-500 p-4 rounded">
                              <p class="text-green-900 text-sm leading-relaxed">{example.secure.explanation}</p>
                            </div>
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </section>
        )}

        <!-- Link a documentaci√≥n oficial -->
        <section>
          <div class="bg-gradient-to-r from-orange-50 to-orange-100 rounded-xl shadow-md p-6 border-2 border-orange-200">
            <h3 class="text-xl font-bold text-orange-900 mb-3 flex items-center gap-2">
              <span class="text-2xl">{'üìö'}</span>
              M√°s Informaci√≥n
            </h3>
            <p class="text-orange-800 mb-4">
              Para informaci√≥n m√°s detallada, consulta la documentaci√≥n oficial de OWASP:
            </p>
            <a 
              href={vuln.owaspUrl}
              target="_blank"
