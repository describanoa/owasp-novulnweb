---
import Layout from '../layouts/Layout.astro';
import RegisterForm from '../components/RegisterForm';
---

<Layout title="Registro - SecureApp">
  <main class="container mx-auto px-4 py-8 flex-1 flex items-center justify-center">
    <div class="bg-white/10 backdrop-blur-md border border-white/10 p-8 rounded-lg shadow-md w-full max-w-md">
      <h1 class="text-3xl font-bold text-center text-white mb-6">
        Crear Cuenta
      </h1>
      <RegisterForm client:load />
      <p class="text-center text-sm text-gray-300 mt-6">
        ¿Ya tienes cuenta?{' '}
        <a href="/login" class="text-blue-400 hover:underline">
          Inicia sesión
        </a>
      </p>
    </div>
  </main>
</Layout>